{
  "extends": [
    "airbnb", 
    "eslint:recommended", 
    "plugin:react/recommended"
  ],

  "plugins": [
    "jsx", 
    "react"
  ],

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  }
}

