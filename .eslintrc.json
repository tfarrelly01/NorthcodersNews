{
 "extends": ["airbnb", "eslint:recommended", "plugin:react/recommended"],
	"plugins": ["jsx", "react"],

	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},

	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jest": true
	},

    "rules": {
        "react/forbid-prop-types": 0,
        "no-underscore-dangle": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "no-console": "off",
        "max-len": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-no-bind": [
            0,
            {
                "ignoreRefs": true,
                "allowArrowFunctions": true,
                "allowBind": true
            }
        ]
    }
}
